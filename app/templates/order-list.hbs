{{outlet}}


<div class="container-order-list">
  <table class="order-table" style="width:80%">
    <tr>
      <th>Item</th>
      <th>Quantity</th> 
      <th>Price [€]</th>
      <th>Subtotal</th>
      
    </tr>

    {{#each model.order as |beer|}}
    <tr>
      <td>{{beer.beerTitle}}</td>
      <td>{{beer.quantity}}</td> 
      <td>{{beer.price}}</td>
      <td id="subtotal"><{{multiply beer.quantity beer.price }}</td>

    </tr>
    {{/each}}
  </table>
  <div class="button-order-list">
    <button {{action "computeTotal"}} >Total</button>
    <h1>Total: {{model.total}}€</h1>
  </div>
</div>

  
