{{outlet}}


<div class="container-order-list">
  <table class="order-table" style="width:80%">
    <tr>
      <th>Item</th>
      <th>Quantity</th> 
      <th>Price [€]</th>
      <th>Subtotal</th>
      <th>Total [€]</th>
      
    </tr>

    {{#each model.order as |beer|}}
    <tr>
      <td>{{beer.beerTitle}}</td>
      <td>{{beer.quantity}}</td> 
      <td>{{beer.price}}</td>
      <td><{{multiply beer.quantity beer.price }}</td>
      <td></td>

    </tr>
    {{/each}}
    <tr>
        <td></td>
        <td></td>
        <td></td>
        <td><button {{action "computeTotal"}} >Refresh to get the final sum</button></td>
        <td>{{model.total}}</td>
    </tr>
  </table>
 
</div>

  
